<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.cliente.CadastroClienteActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/activity_cadastro_cliente_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/rosa"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/activity_cadastro_cliente_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Cadastro de Cliente"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/activity_cadastro_cliente_fab_voltar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:backgroundTint="@color/white"
                android:outlineAmbientShadowColor="@color/rosa"
                android:outlineSpotShadowColor="@color/rosa"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/ic_back"
                app:borderWidth="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>



    <ScrollView
        android:id="@+id/activity_cadastro_cliente_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toTopOf="@id/activity_cadastro_cliente_btn_cadastrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_cadastro_cliente_toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/activity_cadastro_cliente_adiciona_imagem"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:scaleType="fitXY"
                android:layout_marginTop="16dp"
                android:background="@drawable/image_frame"
                android:minWidth="128dp"
                android:minHeight="128dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <EditText
                android:id="@+id/activity_cadastro_cliente_txt_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/text_cadastro_background"
                android:hint="Nome"
                android:maxLength="45"
                android:inputType="textCapWords"
                android:paddingLeft="12dp"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_cadastro_cliente_adiciona_imagem" />

            <EditText
                android:id="@+id/activity_cadastro_cliente_txt_telefone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/text_cadastro_background"
                android:hint="Telefone"
                android:inputType="phone"
                android:maxLength="11"
                android:paddingLeft="12dp"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_cadastro_cliente_txt_nome" />

            <EditText
                android:id="@+id/activity_cadastro_cliente_txt_cpf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/text_cadastro_background"
                android:hint="CPF"
                android:inputType="number"
                android:maxLength="11"
                android:paddingLeft="12dp"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_cadastro_cliente_txt_telefone" />

            <EditText
                android:id="@+id/activity_cadastro_cliente_txt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/text_cadastro_background"
                android:hint="Email"
                android:maxLength="45"
                android:inputType="textEmailAddress"
                android:paddingLeft="12dp"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_cadastro_cliente_txt_cpf" />

            <EditText
                android:id="@+id/activity_cadastro_cliente_txt_data_nascimento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/text_cadastro_background"
                android:hint="Data de Nascimento"
                android:inputType="textEmailAddress"
                android:paddingLeft="12dp"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_cadastro_cliente_txt_email" />

            <EditText
                android:id="@+id/activity_cadastro_cliente_txt_cep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/text_cadastro_background"
                android:hint="CEP"
                android:inputType="number"
                android:maxLength="8"
                android:paddingLeft="12dp"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_cadastro_cliente_txt_data_nascimento" />

            <EditText
                android:id="@+id/activity_cadastro_cliente_txt_estado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/text_cadastro_background"
                android:hint="Estado"
                android:maxLength="45"
                android:inputType="textCapWords"
                android:paddingLeft="12dp"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_cadastro_cliente_txt_cep" />

            <EditText
                android:id="@+id/activity_cadastro_cliente_txt_cidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/text_cadastro_background"
                android:hint="Cidade"
                android:maxLength="45"
                android:inputType="textCapWords"
                android:paddingLeft="12dp"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_cadastro_cliente_txt_estado" />

            <EditText
                android:id="@+id/activity_cadastro_cliente_txt_rua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/text_cadastro_background"
                android:hint="Rua"
                android:maxLength="45"
                android:inputType="textCapWords"
                android:paddingLeft="12dp"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toStartOf="@id/activity_cadastro_cliente_txt_numero"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_cadastro_cliente_txt_cidade" />

            <EditText
                android:id="@+id/activity_cadastro_cliente_txt_numero"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/text_cadastro_background"
                android:gravity="center"
                android:hint="NÃºmero"
                android:inputType="number"
                android:maxLength="4"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/activity_cadastro_cliente_txt_rua"
                app:layout_constraintTop_toTopOf="@id/activity_cadastro_cliente_txt_rua" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


    <Button
        android:id="@+id/activity_cadastro_cliente_btn_cadastrar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/verde"
        android:padding="12dp"
        android:text="Cadastrar"
        android:textColor="@color/black"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/activity_cadastro_cliente_btn_cancelar"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/activity_cadastro_cliente_btn_cancelar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#E89D9D"
        android:padding="12dp"
        android:text="Cancelar"
        android:textColor="@color/black"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/activity_cadastro_cliente_btn_cadastrar"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeWidth="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>