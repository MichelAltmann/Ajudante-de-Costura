<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.cliente.DetalhesClienteActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/activity_detalhes_cardview_imagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/rosa_dark"
                app:layout_constraintEnd_toStartOf="@id/activity_detalhes_txt_nome"
                app:layout_constraintStart_toStartOf="parent"
                app:cardCornerRadius="4dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/activity_detalhes_imagem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/splash_screen"
                        android:layout_margin="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/activity_detalhes_txt_nome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:paddingStart="8dp"
                android:textColor="@color/rosa_dark"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/activity_detalhes_txt_telefone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/activity_detalhes_cardview_imagem"
                app:layout_constraintTop_toTopOf="@id/activity_detalhes_cardview_imagem"
                tools:text="Nome" />

            <RelativeLayout
                android:id="@+id/activity_detalhes_linha_nome"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/linha_separacao"
                android:backgroundTint="@color/azul_dark"
                app:layout_constraintEnd_toEndOf="@id/activity_detalhes_txt_nome"
                app:layout_constraintStart_toStartOf="@id/activity_detalhes_txt_nome"
                app:layout_constraintTop_toBottomOf="@id/activity_detalhes_txt_nome" />


            <TextView
                android:id="@+id/activity_detalhes_txt_telefone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:paddingStart="8dp"
                android:textColor="@color/rosa_dark"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/activity_detalhes_txt_email"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/activity_detalhes_cardview_imagem"
                app:layout_constraintTop_toBottomOf="@id/activity_detalhes_txt_nome"
                tools:text="Telefone" />

            <RelativeLayout
                android:id="@+id/activity_detalhes_linha_telefone"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/linha_separacao"
                android:backgroundTint="@color/azul_dark"
                app:layout_constraintEnd_toEndOf="@id/activity_detalhes_txt_telefone"
                app:layout_constraintStart_toStartOf="@id/activity_detalhes_txt_telefone"
                app:layout_constraintTop_toBottomOf="@id/activity_detalhes_txt_telefone" />


            <TextView
                android:id="@+id/activity_detalhes_txt_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:paddingStart="8dp"
                android:textColor="@color/rosa_dark"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/activity_detalhes_txt_cpf"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/activity_detalhes_cardview_imagem"
                app:layout_constraintTop_toBottomOf="@id/activity_detalhes_txt_telefone"
                tools:text="Email" />

            <RelativeLayout
                android:id="@+id/activity_detalhes_linha_email"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/linha_separacao"
                android:backgroundTint="@color/azul_dark"
                app:layout_constraintEnd_toEndOf="@id/activity_detalhes_txt_email"
                app:layout_constraintStart_toStartOf="@id/activity_detalhes_txt_email"
                app:layout_constraintTop_toBottomOf="@id/activity_detalhes_txt_email" />


            <TextView
                android:id="@+id/activity_detalhes_txt_cpf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:paddingStart="8dp"
                android:textColor="@color/rosa_dark"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/activity_detalhes_cardview_imagem"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/activity_detalhes_cardview_imagem"
                app:layout_constraintTop_toBottomOf="@id/activity_detalhes_txt_email"
                tools:text="Cpf" />


            <RelativeLayout
                android:id="@+id/activity_detalhes_linha_cpf"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/linha_separacao"
                android:backgroundTint="@color/azul_dark"
                app:layout_constraintEnd_toEndOf="@id/activity_detalhes_txt_cpf"
                app:layout_constraintStart_toStartOf="@id/activity_detalhes_txt_cpf"
                app:layout_constraintTop_toBottomOf="@id/activity_detalhes_txt_cpf" />

            <TextView
                android:id="@+id/activity_detalhes_cep"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:textColor="@color/rosa_dark"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/activity_detalhes_cardview_imagem"
                app:layout_constraintTop_toBottomOf="@+id/activity_detalhes_cardview_imagem"
                tools:text="CEP" />

            <TextView
                android:id="@+id/activity_detalhes_estado"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:textColor="@color/rosa_dark"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@id/activity_detalhes_cidade"
                app:layout_constraintStart_toStartOf="@id/activity_detalhes_cardview_imagem"
                app:layout_constraintTop_toBottomOf="@id/activity_detalhes_cep"
                tools:text="Estado" />

            <TextView
                android:id="@+id/activity_detalhes_cidade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:textColor="@color/rosa_dark"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/activity_detalhes_estado"
                app:layout_constraintTop_toBottomOf="@id/activity_detalhes_cep"
                tools:text="Cidade" />

            <TextView
                android:id="@+id/activity_detalhes_rua"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:textColor="@color/rosa_dark"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@id/activity_detalhes_numero"
                app:layout_constraintStart_toStartOf="@id/activity_detalhes_cardview_imagem"
                app:layout_constraintTop_toBottomOf="@id/activity_detalhes_estado"
                tools:text="Rua" />

            <TextView
                android:id="@+id/activity_detalhes_numero"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:textColor="@color/rosa_dark"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/activity_detalhes_rua"
                app:layout_constraintTop_toBottomOf="@id/activity_detalhes_estado"
                tools:text="NÃºmero" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>