                android:paddingStart="8dp"
                android:textColor="@color/rosa_dark"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/activity_detalhes_cliente_cardview_imagem"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/activity_detalhes_cliente_cardview_imagem"
                app:layout_constraintTop_toBottomOf="@id/activity_detalhes_cliente_cpf"
                tools:text="Cpf" />


            <RelativeLayout
                android:id="@+id/activity_detalhes_cliente_linha_cpf"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/linha_separacao"
                android:backgroundTint="@color/azul_dark"
                app:layout_constraintEnd_toEndOf="@id/activity_detalhes_cliente_txt_cpf"
                app:layout_constraintStart_toStartOf="@id/activity_detalhes_cliente_txt_cpf"
                app:layout_constraintTop_toBottomOf="@id/activity_detalhes_cliente_txt_cpf"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/activity_detalhes_cliente_email"
                android:layout_width="0dp"
                android:layout_height="14dp"
                android:paddingStart="8dp"
                android:text="Email: "
                android:textColor="@color/azul"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/activity_detalhes_cliente_txt_email"
                app:layout_constraintEnd_toEndOf="@id/activity_detalhes_cliente_txt_email"
                app:layout_constraintStart_toStartOf="@+id/activity_detalhes_cliente_txt_email" />

            <TextView
                android:id="@+id/activity_detalhes_cliente_txt_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:paddingStart="8dp"
                android:textColor="@color/rosa_dark"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@id/activity_detalhes_cliente_txt_cep"
                app:layout_constraintStart_toStartOf="@id/activity_detalhes_cliente_cardview_imagem"
                app:layout_constraintTop_toBottomOf="@+id/activity_detalhes_cliente_linha_cpf"
                tools:text="Email" />

            <RelativeLayout
                android:id="@+id/activity_detalhes_cliente_linha_email"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/linha_separacao"
                android:backgroundTint="@color/azul_dark"
                app:layout_constraintEnd_toEndOf="@id/activity_detalhes_cliente_txt_email"
                app:layout_constraintStart_toStartOf="@id/activity_detalhes_cliente_txt_email"
                app:layout_constraintTop_toBottomOf="@id/activity_detalhes_cliente_txt_email" />

            <TextView
                android:id="@+id/activity_detalhes_cliente_cep"
                android:layout_width="0dp"
                android:layout_height="14dp"
                android:paddingStart="8dp"
                android:text="CEP: "
                android:textColor="@color/azul"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/activity_detalhes_cliente_txt_cep"
                app:layout_constraintEnd_toEndOf="@id/activity_detalhes_cliente_txt_cep"
                app:layout_constraintStart_toStartOf="@+id/activity_detalhes_cliente_txt_cep" />

            <TextView
                android:id="@+id/activity_detalhes_cliente_txt_cep"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:gravity="end"
                android:textColor="@color/rosa_dark"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/activity_detalhes_cliente_txt_email"
                tools:text="CEP" />

            <RelativeLayout
                android:id="@+id/activity_detalhes_cliente_linha_cep"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/linha_separacao"
                android:backgroundTint="@color/azul_dark"
                app:layout_constraintEnd_toEndOf="@id/activity_detalhes_cliente_txt_cep"
                app:layout_constraintStart_toStartOf="@id/activity_detalhes_cliente_txt_cep"
                app:layout_constraintTop_toBottomOf="@id/activity_detalhes_cliente_txt_cep" />

            <TextView
                android:id="@+id/activity_detalhes_cliente_estado"
                android:layout_width="0dp"
                android:layout_height="14dp"
                android:paddingStart="8dp"
                android:text="Estado: "
                android:textColor="@color/azul"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/activity_detalhes_cliente_txt_estado"
                app:layout_constraintEnd_toEndOf="@id/activity_detalhes_cliente_txt_estado"
                app:layout_constraintStart_toStartOf="@+id/activity_detalhes_cliente_txt_estado" />

            <TextView
                android:id="@+id/activity_detalhes_cliente_txt_estado"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:gravity="start"
                android:paddingStart="8dp"
                android:textColor="@color/rosa_dark"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@id/activity_detalhes_cliente_txt_cidade"
                app:layout_constraintStart_toStartOf="@id/activity_detalhes_cliente_cardview_imagem"
                app:layout_constraintTop_toBottomOf="@+id/activity_detalhes_cliente_linha_cep"
                tools:text="Estado" />

            <RelativeLayout
                android:id="@+id/activity_detalhes_cliente_linha_estado"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/linha_separacao"
                android:backgroundTint="@color/azul_dark"
                app:layout_constraintEnd_toEndOf="@id/activity_detalhes_cliente_txt_estado"
                app:layout_constraintStart_toStartOf="@id/activity_detalhes_cliente_txt_estado"
                app:layout_constraintTop_toBottomOf="@id/activity_detalhes_cliente_txt_estado" />

            <TextView
                android:id="@+id/activity_detalhes_cliente_cidade"
                android:layout_width="0dp"
                android:layout_height="14dp"
                android:paddingStart="8dp"
                android:text="Cidade: "
                android:textColor="@color/azul"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/activity_detalhes_cliente_txt_cidade"
                app:layout_constraintEnd_toEndOf="@id/activity_detalhes_cliente_txt_cidade"
                app:layout_constraintStart_toStartOf="@+id/activity_detalhes_cliente_txt_cidade" />

            <TextView
                android:id="@+id/activity_detalhes_cliente_txt_cidade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="end"
                android:textColor="@color/rosa_dark"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/activity_detalhes_cliente_txt_estado"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/activity_detalhes_cliente_txt_estado"
