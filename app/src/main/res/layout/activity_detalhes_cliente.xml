                android:id="@+id/activity_detalhes_cliente_material_fab_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_add"
                app:layout_constraintBottom_toBottomOf="@id/activity_detalhes_cliente_material"
                app:layout_constraintStart_toEndOf="@id/activity_detalhes_cliente_material"
                app:layout_constraintTop_toTopOf="@id/activity_detalhes_cliente_material" />

            <RelativeLayout
                android:id="@+id/activity_detalhes_cliente_linha_material"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/linha_separacao"
                android:backgroundTint="@color/azul_dark"
                android:foregroundTint="@color/azul"
