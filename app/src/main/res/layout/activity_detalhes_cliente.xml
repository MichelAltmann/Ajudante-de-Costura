                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:gravity="start"
                android:paddingStart="8dp"
                android:textColor="@color/rosa_dark"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@id/activity_detalhes_cliente_txt_numero"
                app:layout_constraintStart_toStartOf="@id/activity_detalhes_cliente_cardview_imagem"
                app:layout_constraintTop_toBottomOf="@+id/activity_detalhes_cliente_linha_estado"
                tools:text="Rua" />

            <RelativeLayout
                android:id="@+id/activity_detalhes_cliente_linha_rua"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/linha_separacao"
                android:backgroundTint="@color/azul_dark"
                app:layout_constraintEnd_toEndOf="@id/activity_detalhes_cliente_txt_rua"
                app:layout_constraintStart_toStartOf="@id/activity_detalhes_cliente_txt_rua"
                app:layout_constraintTop_toBottomOf="@id/activity_detalhes_cliente_txt_rua" />

            <TextView
                android:id="@+id/activity_detalhes_cliente_numero"
                android:layout_width="0dp"
                android:layout_height="14dp"
                android:paddingStart="8dp"
