<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.cliente.DetalhesClienteActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/activity_detalhes_cliente_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/rosa"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@id/activity_detalhes_cliente_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/activity_detalhe_cliente_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Detalhes do Cliente"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/activity_detalhes_cliente_editar"
                app:layout_constraintStart_toEndOf="@+id/activity_detalhes_cliente_fab_voltar"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/activity_detalhes_cliente_editar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:backgroundTint="@color/rosa_light"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/lapis_edicao"
                app:borderWidth="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/activity_detalhes_cliente_fab_voltar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:backgroundTint="@color/white"
                android:outlineAmbientShadowColor="@color/rosa"
                android:outlineSpotShadowColor="@color/rosa"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/ic_back"
                app:borderWidth="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/activity_detalhes_cliente_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_detalhes_cliente_toolbar"
        tools:layout_editor_absoluteX="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                android:id="@+id/activity_detalhes_cliente_cardview_imagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/rosa_dark"
                app:cardCornerRadius="4dp"
                app:layout_constraintBottom_toTopOf="@id/activity_detalhes_cliente_cep"
                app:layout_constraintEnd_toStartOf="@id/activity_detalhes_cliente_txt_nome"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/activity_detalhes_cliente_imagem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/splash_screen"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHeight_max="270dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_max="170dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/activity_detalhes_cliente_txt_nome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:paddingStart="8dp"
                android:textColor="@color/rosa_dark"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/activity_detalhes_cliente_telefone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/activity_detalhes_cliente_cardview_imagem"
                app:layout_constraintTop_toBottomOf="@id/activity_detalhes_cliente_nome"
                tools:text="Nome" />

            <TextView
                android:id="@+id/activity_detalhes_cliente_nome"
                android:layout_width="0dp"
                android:layout_height="14dp"
                android:paddingStart="8dp"
                android:text="Nome:"
                android:textColor="@color/azul"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/activity_detalhes_cliente_txt_nome"
                app:layout_constraintStart_toStartOf="@+id/activity_detalhes_cliente_txt_nome"
                app:layout_constraintTop_toTopOf="@id/activity_detalhes_cliente_cardview_imagem" />


            <RelativeLayout
                android:id="@+id/activity_detalhes_cliente_linha_nome"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/linha_separacao"
                android:backgroundTint="@color/azul_dark"
                app:layout_constraintEnd_toEndOf="@id/activity_detalhes_cliente_txt_nome"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@id/activity_detalhes_cliente_txt_nome"
                app:layout_constraintTop_toBottomOf="@id/activity_detalhes_cliente_txt_nome" />

            <TextView
                android:id="@+id/activity_detalhes_cliente_txt_telefone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:paddingStart="8dp"
                android:textColor="@color/rosa_dark"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/activity_detalhes_cliente_dataNascimento"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/activity_detalhes_cliente_cardview_imagem"
                app:layout_constraintTop_toBottomOf="@id/activity_detalhes_cliente_telefone"
                tools:text="Telefone" />

            <TextView
                android:id="@+id/activity_detalhes_cliente_telefone"
                android:layout_width="0dp"
                android:layout_height="14dp"
                android:layout_marginTop="16dp"
                android:paddingStart="8dp"
                android:text="Telefone:"
                android:textColor="@color/azul"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/activity_detalhes_cliente_txt_telefone"
                app:layout_constraintStart_toStartOf="@+id/activity_detalhes_cliente_txt_telefone"
                app:layout_constraintTop_toBottomOf="@+id/activity_detalhes_cliente_txt_nome" />


            <RelativeLayout
                android:id="@+id/activity_detalhes_cliente_linha_telefone"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/linha_separacao"
                android:backgroundTint="@color/azul_dark"
                app:layout_constraintEnd_toEndOf="@id/activity_detalhes_cliente_txt_telefone"
                app:layout_constraintStart_toStartOf="@id/activity_detalhes_cliente_txt_telefone"
                app:layout_constraintTop_toBottomOf="@id/activity_detalhes_cliente_txt_telefone" />

            <TextView
                android:id="@+id/activity_detalhes_cliente_dataNascimento"
                android:layout_width="0dp"
                android:layout_height="14dp"
                android:layout_marginTop="16dp"
                android:paddingStart="8dp"
                android:text="Data de Nascimento:"
                android:textColor="@color/azul"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/activity_detalhes_cliente_txt_dataNascimento"
                app:layout_constraintStart_toStartOf="@+id/activity_detalhes_cliente_txt_dataNascimento"
                app:layout_constraintTop_toBottomOf="@+id/activity_detalhes_cliente_txt_telefone" />


            <TextView
                android:id="@+id/activity_detalhes_cliente_txt_dataNascimento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:paddingStart="8dp"
                android:textColor="@color/rosa_dark"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/activity_detalhes_cliente_cpf"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/activity_detalhes_cliente_cardview_imagem"
                app:layout_constraintTop_toBottomOf="@id/activity_detalhes_cliente_dataNascimento"
