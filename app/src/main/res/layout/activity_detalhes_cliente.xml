                android:textColor="@color/azul"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/activity_detalhes_cliente_txt_cpf"
                app:layout_constraintStart_toStartOf="@+id/activity_detalhes_cliente_txt_cpf"
                app:layout_constraintTop_toBottomOf="@+id/activity_detalhes_cliente_txt_dataNascimento"
