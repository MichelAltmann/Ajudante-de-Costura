                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/activity_detalhes_cliente_txt_numero"
                app:layout_constraintEnd_toEndOf="@id/activity_detalhes_cliente_txt_numero"
                app:layout_constraintStart_toStartOf="@+id/activity_detalhes_cliente_txt_numero" />

            <TextView
                android:id="@+id/activity_detalhes_cliente_txt_numero"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:paddingStart="8dp"
                android:textColor="@color/rosa_dark"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/activity_detalhes_cliente_txt_rua"
