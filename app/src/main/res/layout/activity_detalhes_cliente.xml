            <RelativeLayout
                android:id="@+id/activity_detalhes_cliente_linha_cidade"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/linha_separacao"
                android:backgroundTint="@color/azul_dark"
                app:layout_constraintEnd_toEndOf="@id/activity_detalhes_cliente_txt_cidade"
                app:layout_constraintStart_toStartOf="@id/activity_detalhes_cliente_txt_cidade"
                app:layout_constraintTop_toBottomOf="@id/activity_detalhes_cliente_txt_cidade" />

            <TextView
                android:id="@+id/activity_detalhes_cliente_rua"
                android:layout_width="0dp"
