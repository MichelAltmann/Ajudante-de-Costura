                android:paddingTop="2dp"
                app:layout_constraintEnd_toEndOf="@id/activity_detalhes_cliente_txt_dataNascimento"
                app:layout_constraintStart_toStartOf="@id/activity_detalhes_cliente_txt_dataNascimento"
                app:layout_constraintTop_toBottomOf="@id/activity_detalhes_cliente_txt_dataNascimento" />

            <TextView
                android:id="@+id/activity_detalhes_cliente_cpf"
